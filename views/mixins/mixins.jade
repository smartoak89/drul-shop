mixin navAdmin(name, code)
    li.nav-item(role="presentation")&attributes(attributes)
        a(href= '/admin/' + code)
            span.nav-icon
                i.fa.fa-cube
            span.nav-text= name
mixin errorMessage()
    div.callout.callout-danger.fade.in.marTop40
        h4 Oh snap!
        p Error message!