extends ../layout/mainAdmin
block content
    include ../layout/mixins
    aside.sidebar(role="complementary")
        div.sidebar-block
            div.media
                div.media-left
                    a(href="page-profile.html")
                        span.status.dotted.dotted-primary(data-toggle="tooltip", data-container="body", title="", data-original-title="available")
                        img.media-object.img-circle(src="/images/ava/uifaces5.jpg", alt="photo profile")
                div.media-body
                    h4.media-heading Emma Greene
                    p.text-muted
                        small Graphic Designer
        div.nav-wrapper
            ul.nav.nav-stacked(role="navigation")
                +navAdmin('Категории', 'categ')
                +navAdmin('Товары', 'tovs')(class="active")
                +navAdmin('Пользователи', 'users')
                +navAdmin('Заявки', 'reqs')
                +navAdmin('Акции', 'stocks')
                +navAdmin('Валюты', 'curr')
                +navAdmin('Доставка', 'deliv')
                +navAdmin('Отзывы', 'com')
    section.content-wrapper(role="main")
        div.content
            div.content-bar
                div.pull-right(role="group")
                    a.btn.btn-nofill.btn-sm.btn-default(data-toggle="modal" data-scripts="_includes/setups.js" data-target="#templateSetup" title="Template Setups" aria-label="template setups" href="#")
                        span.icon-settings.fa-lg.text-muted

                ul.breadcrumb.breadcrumb-angle
                    li
                        a(href="/admin" aria-label="home")
                            i.fa.fa-home
                    li.active Товары

            div.content-body
                div.panel(data-fill-color="true")
                    div.panel-heading
                        div.panel-control.pull-right
                            a.btn.btn-icon(href="#"  data-toggle="panel-refresh" rel="tooltip" data-placement="bottom" title="refresh")
                                i.icon-refresh
                            a.btn.btn-icon(href="#"  data-toggle="panel-expand" rel="tooltip" data-placement="bottom" title="expand")
                                i.arrow_expand
                            a.btn.btn-icon(href="#" data-toggle="panel-collapse" rel="tooltip" data-placement="bottom" title="collapse")
                                i.icon_minus_alt2
                        h3.panel-title Datatables
                    div.panel-body
                        div.btn-toolbar.clearfix(role="toolbar")
                            div.btn-group.pull-right(style="direction: ltr")
                                label.text-muted(style="margin-right:10px") Multiple select:
                                input#allowMultipleSelect.js-switch(type="checkbox" data-class-name="switchery switchery-alt")
                            div.btn-group.btn-group-sm.pull-left
                                button.btn.btn-default#add-datatables1(data-toggle="tooltip" data-container="body" title="add new record" role="button")
                                    i.fa.fa-plus
                            div.btn-group.btn-group-sm.pull-left
                                button.btn.btn-default.datatables1-actions.disabled#edit-datatables1(data-toggle="tooltip" data-container="body" title="edit record" role="button")
                                    i.fa.fa-edit
                                button.btn.btn-default.datatables1-actions.disabled#delete-datatables1(data-toggle="tooltip" data-container="body" title="delete record(s)" role="button")
                                    i.fa.fa-trash-o
                            div.btn-group.pull-left
                                input.form-control.input-sm#filterDatatables1(placeholder="Filter")
                    div.panel-body.hide#addFormContainer
                        form#formAddDatatables1(action="#" method="POST")
                            div.form-group
                                p.lead Add new record
                            div.row
                                div.col-md-3
                                    div.form-group
                                        input.form-control.input-sm#addEngine(name="addEngine" placeholder="Rendering engine" autocomplete="off" required="")
                                div.col-md-3
                                    div.form-group
                                        input.form-control.input-sm#addBrowser(name="addBrowser" placeholder="Browser" autocomplete="off" required="")
                                div.col-md-2
                                    div.form-group
                                        input.form-control.input-sm#addPlatform(name="addPlatform" placeholder="Platform" autocomplete="off" required="")
                                div.col-md-2
                                    div.form-group
                                        input.form-control.input-sm#addVersion(name="addVersion" placeholder="Engine version" autocomplete="off" required="")

                <div class="col-md-2">
                <div class="form-group">
                <label class="select select-sm">
                <select name="addGrade" id="addGrade" required="">
                <option value="">CSS grade</option>
                <option value="A"> A </option>
                <option value="B"> B </option>
                <option value="C"> C </option>
                <option value="D"> D </option>
                <option value="E"> E </option>
                <option value="X"> X </option>
                <option value="C/A1"> C/A<sup>1</sup> </option>
                </select>
                </label>
                </div>
                </div><!-- /.cols -->
                </div><!-- /.row -->
                </div><!-- /.form-group -->

                <div class="form-grouphide">
                <button id="hideAddDatatables1" class="btn btn-default btn-sm">Cancel</button>
                <button type="submit" class="btn btn-success btn-sm">Create</button>
                </div><!-- /.form-group -->
                </form><!-- /#formAddDatatables1 -->
                </div><!-- /.panel-body -->

                <div class="panel-body hide" id="editFormContainer">
                <form id="formEditDatatables1" action="#" method="POST">
                <div class="form-group">
                <p class="lead">Edit selected row</p>
                <div class="row">
                <div class="col-md-3">
                <div class="form-group">
                <input type="hidden" name="datatables1ID" id="datatables1ID">
                <input name="editEngine" id="editEngine" class="form-control input-sm" placeholder="Rendering engine" autocomplete="off" required="">
                </div>
                </div><!-- /.cols -->
                <div class="col-md-3">
                <div class="form-group">
                <input name="editBrowser" id="editBrowser" class="form-control input-sm" placeholder="Browser" autocomplete="off" required="">
                </div>
                </div><!-- /.cols -->
                <div class="col-md-2">
                <div class="form-group">
                <input name="editPlatform" id="editPlatform" class="form-control input-sm" placeholder="Platform" autocomplete="off" required="">
                </div>
                </div><!-- /.cols -->
                <div class="col-md-2">
                <div class="form-group">
                <input name="editVersion" id="editVersion" class="form-control input-sm" placeholder="Engine version" autocomplete="off" required="">
                </div>
                </div><!-- /.cols -->
                <div class="col-md-2">
                <div class="form-group">
                <label class="select select-sm">
                <select name="editGrade" id="editGrade" required="">
                <option value="">CSS grade</option>
                <option value="A"> A </option>
                <option value="B"> B </option>
                <option value="C"> C </option>
                <option value="D"> D </option>
                <option value="E"> E </option>
                <option value="X"> X </option>
                <option value="C/A1"> C/A<sup>1</sup> </option>
                </select>
                </label>
                </div>
                </div><!-- /.cols -->
                </div><!-- /.row -->
                </div><!-- /.form-group -->

                <div class="form-group">
                <button id="hideEditDatatables1" class="btn btn-default btn-sm">Cancel</button>
                <button type="submit" class="btn btn-primary btn-sm">Save Change</button>
                </div><!-- /.form-group -->
                </form><!-- /#formAddDatatables1 -->
                </div><!-- /.panel-body -->

                <!-- datatables1 -->
                <table id="datatables1" class="table table-noborder table-hover bordered-top">
                <thead>
                <tr>
                <th>Rendering engine</th>
                <th>Browser</th>
                <th>Platform(s)</th>
                <th>Engine version</th>
                <th>CSS grade</th>
                </tr>
                </thead>

                <tbody></tbody>

                <tfoot>
                <tr>
                <th>Rendering engine</th>
                <th>Browser</th>
                <th>Platform(s)</th>
                <th>Engine version</th>
                <th>CSS grade</th>
                </tr>
                </tfoot>
                </table>
                </div>
                </div>

            div.modal.fade#templateSetup
                div.modal-dialog
                    div.modal-content