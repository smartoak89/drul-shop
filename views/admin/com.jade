                    div.bordered-top.panel-body
                        div.row
                            div.col-lg-12.col-md-12.col-sm-12.col-xs-12.btn-toolbar
                                div.btn-group.btn-group-sm.pull-right
                                    button.btn.btn-default#delete-ss(data-toggle="tooltip" data-container="body" title="delete comment" role="button")
