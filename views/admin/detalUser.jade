extends ../layout/mainAdmin
block content
    include ../mixins/mixins
    aside.sidebar(role="complementary")
        div.sidebar-block
            div.media
                div.media-left
                    a(href="page-profile.html")
                        span.status.dotted.dotted-primary(data-toggle="tooltip", data-container="body", title="", data-original-title="available")
                        img.media-object.img-circle(src="/images/ava/uifaces5.jpg", alt="photo profile")
                div.media-body
                    h4.media-heading Emma Greene
                    p.text-muted
                        small Graphic Designer
        div.nav-wrapper
            ul.nav.nav-stacked(role="navigation")
                +navAdmin('Категории', 'categ')
                +navAdmin('Товары', 'tovs')
                +navAdmin('Пользователи', 'users')(class="active")
                +navAdmin('Заявки', 'reqs')
                +navAdmin('Акции', 'stocks')
                +navAdmin('Валюты', 'curr')
                +navAdmin('Доставка', 'deliv')
                +navAdmin('Отзывы', 'com')
    section.content-wrapper(role="main")
        div.content
            div.content-bar
                div.pull-right(role="group")
                    a.btn.btn-nofill.btn-sm.btn-default(data-toggle="modal" data-scripts="_includes/setups.js" data-target="#templateSetup" title="Template Setups" aria-label="template setups" href="#")
                        span.icon-settings.fa-lg.text-muted

                ul.breadcrumb.breadcrumb-angle
                    li
                        a(href="/admin" aria-label="home")
                            i.fa.fa-home
                    li
                        a(href="/admin/users" aria-label="home") Пользователи
                    li.active Деатли
                div.content-hero
                    div.row
                        div.col-lg-6
                            div.clearfix
                                //div.float-bar-brand
                                //    a.kit-avatar.kit-avatar-128.no-padding.border-white(href="#")
                                //    img(alt="cover" src="images/dummy/uifaces22.jpg")
                            div.col-sm-8
                                div.hidden-xs
                                    h2.display-name.media-heading.text-teal user@gmail.com
                                    p.text-muted.mb-4x
                                        span.mr-2x Покупатель
                                        span <i class="fa fa-map-marker fa-fw"></i> Страна
                                div.mt-4x
                                    p About donald ab officia facilis laudantium provident quas, doloremque, dicta doloribus non repudiandae!
                                    p
                                        a.btn.btn-danger.btn-sm.btn-circle(href="#" aria-label="google plus")
                                            i.fa.fa-lg.fa-google-plus
                                        a.btn.btn-primary.btn-sm.btn-circle.ml-1x(href="#" aria-label="instagram")
                                            i.fa.fa-lg.fa-instagram
                                        a.btn.btn-info.btn-sm.btn-circle.ml-1x(href="#" aria-label="twitter")
                                            i.fa.fa-lg.fa-twitter
                                        a.btn.btn-success.btn-sm.btn-circle.ml-1x(href="#" aria-label="facebook")
                                            i.fa.fa-lg.fa-facebook
                        div.col-lg-6
                            h4.text-muted Статистика
                                div.row
                                    div.col-xs-3
                                        span.headline
                                            strong 68
                                        p Товары
                                    div.col-xs-3
                                        span.headline
                                            strong 23
                                        p Заказы
                                    div.col-xs-3
                                        span.headline
                                            strong 1,2K
                                        p Просмотры
                                    div.col-xs-3
                                        span.headline
                                            strong 26
                                        p Сообщения
                    div.btn-group.btn-group-sm.pull-right
                        button.btn.btn-default.datatables1-actions#edit-detailUser(data-toggle="tooltip" data-container="body" title="edit profile" role="button")
                            i.fa.fa-edit
                        button.btn.btn-default.datatables1-actions#delete-detailUser(data-toggle="tooltip" data-container="body" title="delete profile" role="button")
                            i.fa.fa-trash-o
                    div.panel-body.borderTop.hide#editUserInfoContainer
                        form#formEditUserInfo(action="#" method="POST")
                            div.form-group
                                p.lead Edit selected row
                                div.row
                                    div.col-md-3
                                        div.form-group
                                            input#datatables1ID(type="hidden" name="datatables1ID")
                                            input.form-control.input-sm#editEngine(name="editEngine" placeholder="Rendering engine" autocomplete="off" required="")
                                    div.col-md-3
                                        div.form-group
                                            input.form-control.input-sm#editBrowser(name="editBrowser" placeholder="Browser" autocomplete="off" required="")
                                    div.col-md-2
                                        div.form-group
                                            input.form-control.input-sm#editPlatform(name="editPlatform" placeholder="Platform" autocomplete="off" required="")
                                    div.col-md-2
                                        div.form-group
                                            input.form-control.input-sm#editVersion(name="editVersion" placeholder="Engine version" autocomplete="off" required="")
                                    div.col-md-2
                                        div.form-group
                                            label.select.select-sm
                                                select#editGrade(name="editGrade" required="")
                                                    option(value="") CSS grade
                                                    option(value="A") A
                                                    option(value="B") B
                                                    option(value="C") C
                                                    option(value="D") D
                                                    option(value="E") E
                                                    option(value="X") X
                                                    option(value="C/A1") C/A
                                                        sup 1
                                        div.form-group
                                            button.btn.btn-default.btn-sm#hideEditUserInfo Cancel
                                            button.btn.btn-primary.btn-sm(type="submit") Save Change
            div.content-body
